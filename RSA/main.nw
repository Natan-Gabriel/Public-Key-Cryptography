    # we MUST have 27^k < n < 27^l
    if 27 ** k >= n or n >= 27 ** l:
        return "Please choose some appropriate values for k and l"

    # print("ciphertext: ",ciphertext)
    plaintext = ""
    for i in range(0, len(ciphertext) // l):
